@page
@model YasayanKutuphane.Pages.Customer.Home.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
    <body>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                @foreach (var item in Model.Satista)
                {
                <div class="@(item.ID==2 ? "carousel-item active" : "carousel-item")">
                    <img src="@item.KapakFotografi" class="d-block w-100" alt="@item.Isim">
                </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!-- Main Content -->
        <div class="row">
            <div class="col-4">
                <div class="card text-center">
                    <div class="card-header bg-info">
                        Harry Potter ve Felsefe Taşı
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Special title treatment</h5>
                        <p class="card-text">Harry Potter ve Felsefe Taşı, J. K. Rowling tarafından yazılmış ve genç büyücü Harry Potter'ın takdim edildiği Harry Potter serisindeki ilk roman.</p>
                        <br />
                    </div>
                    <div class="card-footer text-muted">
                        <a href="#" class="btn btn-primary">Sayfaya Git</a>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card text-center">
                    <div class="card-header bg-info">
                        Yüzüklerin Efendisi İki Kule
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Special title treatment</h5>
                        <p class="card-text">Oxford Dilbilim Profesörü John Ronald Reuel Tolkien'in yazdığı Yüzüklerin Efendisi adlı fantastik edebiyat üçlemesinin ikinci kitabıdır.</p>
                        <br />
                    </div>
                    <div class="card-footer text-muted">
                        <a href="#" class="btn btn-primary">Sayfaya Git</a>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card text-center">
                    <div class="card-header bg-info">
                        Fahrenheit 451
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Special title treatment</h5>
                        <p class="card-text">Amerikan edebiyatının öne çıkan yazarlarından Ray Bradbury’nin 1953 yılında yayımlanan eseri Fahrenheit 451, on yıllar öncesinden bugünün ve uzak geleceğin dünyasına sert eleştiriler savuruyor.</p>

                    </div>
                    <div class="card-footer text-muted">
                        <a href="#" class="btn btn-primary">Sayfaya Git</a>
                    </div>
                </div>
            </div>
        </div>
        <br /> <br />
        <div class="row">
            <div class="col-4">
                <div class="card text-center">
                    <div class="card-header bg-info">
                        Küçük Prens
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Special title treatment</h5>
                        <p class="card-text">Küçük Prens (Fransızca özgün adı: Le Petit Prince), Fransız yazar ve pilot Antoine de Saint-Exupéry tarafından yazılan ve 1943'te yayımlanan hikâye.</p>

                    </div>
                    <div class="card-footer text-muted">
                        <a href="#" class="btn btn-primary">Sayfaya Git</a>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <!-- Footer -->
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-10 mx-auto">
                        <ul class="list-inline text-center">
                            <li class="list-inline-item">
                                <a href="#">
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x"></i>
                                        <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="#">
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x"></i>
                                        <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="#">
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x"></i>
                                        <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </li>
                        </ul>
                        <p class="copyright text-muted">Copyright &copy; Your Website 2019</p>
                    </div>
                </div>
            </div>
        </footer>

        <!-- Bootstrap core JavaScript -->
        <script src="~/vendor/jquery/jquery.min.js"></script>
        <!-- <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>-->
        <!-- Custom scripts for this template -->
        <script src="~/js/clean-blog.min.js"></script>

    </body>


