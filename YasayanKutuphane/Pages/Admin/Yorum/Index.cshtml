@page
@model YasayanKutuphane.Pages.Admin.Yorum.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Başlangıç</h1>

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Yorum List</h2>

    </div>
    <div class="col-6 text-right">
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> &nbsp;
            Yeni Oluştur
        </a>
        <br /> <br />
    </div>

</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Yorum[0].Kitap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yorum[0].YorumTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yorum[0].Icerik)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Yorum) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Kitap.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YorumTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Icerik)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-info">
                    <i class="fas fa-edit"></i> &nbsp;
                    Güncelle
                </a><br />
                <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-warning">
                    <i class="fas fa-info-circle"></i> &nbsp;
                    Ayrıntılar
                </a>
                <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> &nbsp;
                    Sil &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
