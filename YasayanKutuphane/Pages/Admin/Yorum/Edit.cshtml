@page
@model YasayanKutuphane.Pages.Admin.Yorum.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Güncelle</h1>

<h4>Yorum</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Yorum.ID" />
            <div class="form-group">
                <label asp-for="Yorum.KitapID" class="control-label"></label>
                <select asp-for="Yorum.KitapID" class="form-control" asp-items="ViewBag.KitapID"></select>
                <span asp-validation-for="Yorum.KitapID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Yorum.YorumTarihi" class="control-label"></label>
                <input asp-for="Yorum.YorumTarihi" class="form-control" />
                <span asp-validation-for="Yorum.YorumTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Yorum.Icerik" class="control-label"></label>
                <input asp-for="Yorum.Icerik" class="form-control" />
                <span asp-validation-for="Yorum.Icerik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-dark">
        <i class="fas fa-home"></i> &nbsp;
        Geri Dön
    </a><br />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
