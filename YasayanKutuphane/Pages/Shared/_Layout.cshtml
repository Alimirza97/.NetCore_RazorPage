<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YasayanKutuphane</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">YasayanKutuphane</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropDown" data-toggle="dropdown">
                                Admin
                            </a>

                            <div class="dropdown-menu">
                                <a class="dropdown-item text-dark" asp-page="/Admin/Kitap/Index"> Kitap </a>
                                <a class="dropdown-item text-dark" asp-page="/Admin/Yazar/Index"> Yazar </a>
                                <a class="dropdown-item text-dark" asp-page="/Admin/Cevirmen/Index"> Yazar </a>
                                <a class="dropdown-item text-dark" asp-page="/Admin/Kategori/Index"> Kategori </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-dark" asp-page="/Admin/Dil/Index"> Dil </a>
                                <a class="dropdown-item text-dark" asp-page="/Admin/Ulke/Index"> Ülke </a>
                                <a class="dropdown-item text-dark" asp-page="/Admin/Yayinevi/Index"> Dil </a>
                                <a class="dropdown-item text-dark" asp-page="/Admin/Yorum/Index"> Ülke </a>
                                <a class="dropdown-item text-dark" asp-page="/Admin/KapakTipi/Index"> Ülke </a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Customer/Contact/Index">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - YasayanKutuphane - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
